{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
<main>
    <div class="bcg-profile">
        <section id="dashboard">
            <aside>
                <div class="dashboard-aside">
                    <figure>
                        <img src="{{ asset('uploads/' ~ app.user.profilePicture)}}" alt="">
                    </figure>
                    <p><b>{{ app.user}}</b></p>
                </div>
                <ul>
                    <li><a href="{{ path('show_profile', {'id': app.user.id}) }}) }}"><i class="fa-regular fa-user" style="color: #ffffff;"></i> Profil</a></li>
                    <li><a href="{{ path('show_posts', {'id': app.user.id}) }}) }}"><i class="fa-regular fa-pen-to-square" style="color: #ffffff;"></i> Posts</a></li>
                    <li><a href="{{ path('show_ratings', {'id': app.user.id}) }}) }}"><i class="fa-regular fa-star-half-stroke" style="color: #ffffff;"></i> Avis</a></li>
                    <li><a href="#"><i class="fa-regular fa-heart" style="color: #ffffff;"></i> Favoris</a></li>
                    <li><a href="#"><i class="fa-solid fa-signs-post" style="color: #ffffff;"></i> Itin√©raires</a></li>
                </ul>
            </aside>
            <section id="profile-container">
                <h1>Infos Profil</h1>
                <p>Nom d'utilisateur : {{ app.user}}</p>
                <p>Email : {{ app.user.email}}</p>
                <p><a href="{{ path('edit_user', {'id' : app.user.id}) }}">Modifier les infos du profil</a>
                <p><a href="{{ path('edit_password', {'id' : app.user.id}) }}">Modifier le mot de passe</a>
            
            </section>
        </section>
        <figure class="travel-sign">
            <img src="/img-source/travel-sign.webp">
        </figure>
        <figure class="travel-stork">
            <img src="/img-source/adventure-stork.webp">
        </figure>
    </div>
</main>
{% endblock %}