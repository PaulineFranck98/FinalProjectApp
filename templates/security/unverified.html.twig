{% extends 'base.html.twig' %}

{% block title %}Vérification suggestion d'ajout{% endblock %}

{% block body %}
<main>
     <div class="bcg-profile">
        <section id="dashboard">
            <aside>
                <div class="dashboard-aside">
                    <figure>
                        <img src="{{ asset('uploads/' ~ app.user.profilePicture)}}" alt="">
                    </figure>
                    <p><b>{{ app.user}}</b></p>
                </div>
                <ul>
                    <li><a href="{{ path('show_profile') }}) }}"><i class="fa-regular fa-user" style="color: #ffffff;"></i> Profil</a></li>
                    <li><a href="{{ path('show_posts') }}) }}"><i class="fa-regular fa-pen-to-square" style="color: #ffffff;"></i> Posts</a></li>
                    <li class="active"><a href="{{ path('show_ratings') }}) }}"><i class="fa-regular fa-star-half-stroke" style="color: #ffffff;"></i> Avis</a></li>
                    <li><a href="#"><i class="fa-regular fa-heart" style="color: #ffffff;"></i> Favoris</a></li>
                    <li><a href="#"><i class="fa-solid fa-signs-post" style="color: #ffffff;"></i> Itinéraires</a></li>
                </ul>
            </aside>
            <section id="profile-container">
                <h1>Suggestions d'ajout</h1>
                <table>
                    {% if unverifiedPlaces %}
                        {% for place in unverifiedPlaces %}
                        <tr>
                            <th>{{place.name}}</th>
                            <td><a href="{{ path('delete_place', {'id' : place.id})}}"><i class="fa-solid fa-circle-check" style="color: #89cd69;"></i></a></td>
                            <td><i class="fa-solid fa-circle-minus" style="color: #ff6a60;"></i></td>
                        </tr>
                        {% endfor %}
                    {% else %}
                        <p>Aucune suggestion d'ajout de lieu ...</p>
                    {% endif %}
                </table>
            </section>
        </section>
    </div>
     {% if unverifiedPlaces %}
        {% for place in unverifiedPlaces %}
            <p>{{place.name}}</p>
        {% endfor %}
     {% else %}
        <p>Aucune suggestion d'ajout de lieu ...</p>
     {% endif %}
</main>
{% endblock %}