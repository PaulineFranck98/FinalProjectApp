{% extends 'base.html.twig' %}

{% block title %}Modification du mot de passe{% endblock %}

{% block body %}
<main>
    <section>
        
    <h1>Modifier mon mot de passe</h1>


    {{ form_start(formEditPassword) }}

    {{ form_row(formEditPassword.currentPassword, {
        label: 'Mot de passe actuel'
    }) }}

    {{ form_row(formEditPassword.plainPassword, {
        label: 'Mot de passe'
    }) }}
   

    {{ form_row(formEditPassword.valider) }}
    
    {{ form_end(formEditPassword) }}

    </section>

  

</main>
{% endblock %}