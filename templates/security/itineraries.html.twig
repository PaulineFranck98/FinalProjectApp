{% extends 'base.html.twig' %}
{% block meta_description %}Mes itinéraires personnalisés{% endblock %}
{% block title %}Mes itinéraires | Nom du site{% endblock %}

{% block body %}
<main>
    <div class="bcg-profile">
        <section id="dashboard">
            <aside>
                <div class="dashboard-aside">
                    <figure>
                        {# <img src="#"> #}
                    </figure>
                    <p><b>{{ app.user}}</b></p>
                </div>
                <ul>
                    <li><a href="{{ path('show_profile') }}) }}"><i class="fa-regular fa-user" style="color: #ffffff;"></i> Profil</a></li>
                    <li class="active"><a href="{{ path('show_posts') }}) }}"><i class="fa-regular fa-pen-to-square" style="color: #ffffff;"></i> Posts</a></li>
                    <li><a href="{{ path('show_ratings') }}) }}"><i class="fa-regular fa-star-half-stroke" style="color: #ffffff;"></i> Avis</a></li>
                    <li><a href="#"><i class="fa-regular fa-heart" style="color: #ffffff;"></i> Favoris</a></li>
                    <li><a href="#"><i class="fa-solid fa-signs-post" style="color: #ffffff;"></i> Itinéraires</a></li>
                </ul>
            </aside>
            <section id="profile-container">
                 <h1>Mes itinéraires</h1>
                {% if app.user.customItineraries %}
                <ul class="rating-ul">
                    {% for itinerary in app.user.customItineraries %}
                    <li>
                        {{ itinerary.name}}
                        {# <p><b><i class="fa-solid fa-location-dot" style="color: #fb463a;"></i> {{ rating.place}}</b></p>
                        <p>{{ rating.rating|stars|raw}}</p>
                        <p><small>{{ rating.ratingDate|date("d/m/Y, H:i")}}</small></p>
                        <p>{{ rating.comment }}</p> #}
                    </li>
        
                    {% endfor %}
                </ul>
                {% else %}
                    <p>Vous n'avez pas encore créé d'itinéraires.</p>
                {% endif %}
                
            </section>
        </section>
           <figure class="travel-sign">
            <img src="/img-source/travel-sign.webp">
        </figure>
        <figure class="travel-stork">
            <img src="/img-source/adventure-stork.webp">
        </figure>
    </div>
</main>
{% endblock %}